{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug radosgw [dbstore]",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/radosgw",
            "args": ["--rgw-backend-store=dbstore",
                     "-i", "foo",        
                     "--debug-rgw", "15",        
                     "--no-mon-config",        
                     "--rgw-data", "${workspaceFolder}/wd_rgw_dbstore",        
                     "--run-dir", "${workspaceFolder}/wd_rgw_dbstore",        
                     "-d"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/wd_rgw_dbstore",
            "environment": [
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}
